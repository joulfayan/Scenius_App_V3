    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "module": "esnext",
    "target": "esnext",
    "lib": ["es2020", "dom", "dom.iterable"],
